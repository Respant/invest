{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Currency</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ currency.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ currency.name }}</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>{{ currency.code }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('currency_index') }}" class="btn btn-default btn-back" role="button">Back to the list</a>
            <a href="{{ path('currency_edit', { 'id': currency.id }) }}" class="btn btn-success btn-edit">Edit</a>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-remove">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
