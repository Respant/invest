{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Type</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ type.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ type.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ type.description }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('type_index') }}" class="btn btn-default btn-back" role="button">Back to the list</a>
            <a href="{{ path('type_edit', { 'id': type.id }) }}" class="btn btn-success btn-edit">Edit</a>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-remove">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
