{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Companies list</h1>
            <a href="{{ path('company_new') }}" class="btn btn-primary btn-create" role="button">Create a new company</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Startdate</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{% if company.startDate %}{{ company.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td class="actions">
                            <a href="{{ path('company_show', { 'id': company.id }) }}">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('company_edit', { 'id': company.id }) }}">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
