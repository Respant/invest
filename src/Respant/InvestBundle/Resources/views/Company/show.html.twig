{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Company</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ company.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ company.name }}</td>
                </tr>
                <tr>
                    <th>Startdate</th>
                    <td>{% if company.startDate %}{{ company.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('company_index') }}" class="btn btn-default btn-back" role="button">Back to the list</a>
            <a href="{{ path('company_edit', { 'id': company.id }) }}" class="btn btn-success btn-edit">Edit</a>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-remove">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
