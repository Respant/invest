{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Expenses</h1>
            <a href="{{ path('expense_new') }}" class="btn btn-primary btn-create" role="button">Create a new expense</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Company</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Interestrate</th>
                    <th>Closed</th>
                    <th>Extrafee</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for expense in expenses %}
                    <tr>
                        <td><a href="{{ path('expense_show', { 'id': expense.id }) }}">{{ expense.id }}</a></td>
                        <td>{{ expense.company }}</td>
                        <td>{{ expense.amount }}</td>
                        <td>{{ expense.description }}</td>
                        <td>{{ expense.interestRate }}</td>
                        <td>{% if expense.closed %}Yes{% else %}No{% endif %}</td>
                        <td>{{ expense.extraFee }}</td>
                        <td>{% if expense.date %}{{ expense.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td class="actions">
                            <a href="{{ path('expense_show', { 'id': expense.id }) }}">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('expense_edit', { 'id': expense.id }) }}">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
