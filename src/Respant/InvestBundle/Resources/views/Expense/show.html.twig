{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Expense</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ expense.id }}</td>
                </tr>
                <tr>
                    <th>Company</th>
                    <td>{{ expense.company }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ expense.amount }}</td>
                </tr>
                <tr>
                    <th>Interestrate</th>
                    <td>{{ expense.interestRate }}</td>
                </tr>
                <tr>
                    <th>Closed</th>
                    <td>{% if expense.closed %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Extrafee</th>
                    <td>{{ expense.extraFee }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{% if expense.date %}{{ expense.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('expense_index') }}" class="btn btn-default btn-back" role="button">Back to the list</a>
            <a href="{{ path('expense_edit', { 'id': expense.id }) }}" class="btn btn-success btn-edit">Edit</a>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-remove">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
