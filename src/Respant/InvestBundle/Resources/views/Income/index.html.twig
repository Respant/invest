{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Incomes</h1>
            <a href="{{ path('income_new') }}" class="btn btn-primary btn-create" role="button">Create a new income</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Company</th>
                    <th>Amount</th>
                    <th>Extrafee</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for income in incomes %}
                    <tr>
                        <td><a href="{{ path('income_show', { 'id': income.id }) }}">{{ income.id }}</a></td>
                        <td>{{ income.income }}</td>
                        <td>{{ income.amount }}</td>
                        <td>{{ income.extraFee }}</td>
                        <td>{% if income.date %}{{ income.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td class="actions">
                            <a href="{{ path('income_show', { 'id': income.id }) }}">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('income_edit', { 'id': income.id }) }}">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
