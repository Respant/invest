{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Income</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ income.id }}</td>
                </tr>
                <tr>
                    <th>Company</th>
                    <td>{{ income.company }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ income.amount }}</td>
                </tr>
                <tr>
                    <th>Extrafee</th>
                    <td>{{ income.extraFee }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{% if income.date %}{{ income.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('income_index') }}" class="btn btn-default btn-back" role="button">Back to the list</a>
            <a href="{{ path('income_edit', { 'id': income.id }) }}" class="btn btn-success btn-edit">Edit</a>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-remove">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
