{% extends 'base.html.twig' %}

{% block body %}
    <h1>Income</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ income.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ income.company }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ income.amount }}</td>
            </tr>
            <tr>
                <th>Extrafee</th>
                <td>{{ income.extraFee }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if income.date %}{{ income.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('income_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('income_edit', { 'id': income.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
